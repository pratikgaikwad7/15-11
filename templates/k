CREATE TABLE fst (
    sr_no INT AUTO_INCREMENT PRIMARY KEY,
    ticket_no VARCHAR(50),
    name VARCHAR(100),
    gender VARCHAR(20),
    employee_category VARCHAR(50),
    plant_location VARCHAR(100),
    joined_year VARCHAR(10),
    date_from DATE,
    date_to DATE,
    shift VARCHAR(50),
    learning_hours VARCHAR(20),
    training_name VARCHAR(100),
    batch_number VARCHAR(50),
    training_venue_name VARCHAR(100),
    faculty_name VARCHAR(100),
    fst_cell_name VARCHAR(100),
    remark TEXT
);
CREATE TABLE induction (
    sr_no INT AUTO_INCREMENT PRIMARY KEY,
    ticket_no VARCHAR(50),
    name VARCHAR(100),
    gender VARCHAR(10),
    employee_category VARCHAR(50),
    plant_location VARCHAR(100),
    joined_year INT,
    date_from DATE,
    date_to DATE,
    shift VARCHAR(50),
    learning_hours DECIMAL(5,2),
    training_name VARCHAR(200),
    batch_number VARCHAR(50),
    training_venue_name VARCHAR(200),
    faculty_name VARCHAR(100),
    subject_name VARCHAR(100),
    remark TEXT
);
CREATE TABLE fta (
    sr_no INT AUTO_INCREMENT PRIMARY KEY,
    ticket_no VARCHAR(50),
    name VARCHAR(100),
    gender VARCHAR(10),
    joining_year INT,
    date_of_joining DATE,
    fta_batch_number VARCHAR(50),
    date_of_separation DATE,
    trade VARCHAR(50),
    all_women_batch VARCHAR(10),
    second_year_inplant_shop VARCHAR(10),
    faculty_name VARCHAR(100),
    final_result VARCHAR(50),
    training_name VARCHAR(100),
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);
